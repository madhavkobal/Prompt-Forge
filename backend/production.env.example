# Production Environment Configuration
# Copy this file to .env.production and update with your production values

# Application Settings
ENVIRONMENT=production
DEBUG=False
APP_NAME=PromptForge
APP_VERSION=1.0.0

# Security
SECRET_KEY=your-super-secret-key-min-32-chars-change-this-in-production
ALLOWED_HOSTS=["yourdomain.com","www.yourdomain.com","api.yourdomain.com"]

# Security Features
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10
MAX_REQUEST_SIZE=10485760  # 10MB in bytes
ENABLE_CSRF_PROTECTION=True
CSRF_SECRET_KEY=  # Optional: Separate CSRF secret (defaults to SECRET_KEY)
ENABLE_SECURITY_HEADERS=True

# Password Policy
MIN_PASSWORD_LENGTH=8
REQUIRE_PASSWORD_UPPERCASE=True
REQUIRE_PASSWORD_LOWERCASE=True
REQUIRE_PASSWORD_DIGITS=True
REQUIRE_PASSWORD_SPECIAL=True

# CORS Settings (Frontend domains)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database
DATABASE_URL=postgresql://user:password@postgres:5432/promptforge_prod
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Database Security
# For SSL/TLS encryption, append ?sslmode=require to DATABASE_URL:
# DATABASE_URL=postgresql://user:password@postgres:5432/promptforge_prod?sslmode=require
# For AWS RDS, use ?sslmode=verify-full&sslrootcert=/path/to/rds-ca-cert.pem

# Secrets Management (Optional - for production)
# Use AWS Secrets Manager, HashiCorp Vault, or similar
# Set USE_SECRETS_MANAGER=True to load secrets from external service
USE_SECRETS_MANAGER=False
SECRETS_MANAGER_TYPE=  # Options: aws_secrets_manager, vault, gcp_secret_manager
AWS_REGION=us-east-1  # For AWS Secrets Manager
VAULT_ADDR=  # For HashiCorp Vault
VAULT_TOKEN=  # For HashiCorp Vault

# Redis (for caching and rate limiting)
REDIS_URL=redis://redis:6379/0

# API Keys (for AI services)
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-optional

# JWT Settings
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or text

# Error Tracking & Monitoring
SENTRY_DSN=  # Optional: Sentry DSN for error tracking (https://your-sentry-dsn@sentry.io/project-id)
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1  # Sample 10% of transactions for performance monitoring

# Email (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_UPLOAD_TYPES=.txt,.md,.json

# Monitoring & Observability
ENABLE_METRICS=True  # Enable Prometheus metrics endpoint
ENABLE_REQUEST_TIMING=True  # Enable request timing logging
SLOW_REQUEST_THRESHOLD=1.0  # Seconds - log requests slower than this
ENABLE_DETAILED_HEALTH_CHECK=True  # Include Gemini API check in /health/detailed
HEALTH_CHECK_TIMEOUT=5  # Seconds - timeout for health check operations

# Workers
WORKER_CLASS=uvicorn.workers.UvicornWorker
WORKERS=4
WORKER_CONNECTIONS=1000
TIMEOUT=120
KEEPALIVE=5
