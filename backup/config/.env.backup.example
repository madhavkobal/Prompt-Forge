# PromptForge Backup Environment Variables
# Copy this file to .env.backup and fill in the values

################################################################################
# Database Credentials
################################################################################

# Application database password
DB_PASS=your_database_password_here

# PostgreSQL superuser password
POSTGRES_PASSWORD=your_postgres_password_here

################################################################################
# Encryption
################################################################################

# GPG recipient email for encryption
GPG_RECIPIENT=admin@promptforge.io

# Optional: GPG key ID
# GPG_KEY_ID=1234567890ABCDEF

################################################################################
# Off-site Backup (SSH/rsync)
################################################################################

# Remote server credentials
REMOTE_USER=backup
REMOTE_HOST=backup.example.com
REMOTE_PATH=/backups/promptforge

# Optional: SSH key path
# SSH_KEY=/root/.ssh/backup_id_rsa

################################################################################
# S3-Compatible Storage (Alternative)
################################################################################

# S3 credentials (if using S3 instead of rsync)
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_BUCKET=promptforge-backups
S3_REGION=us-east-1
S3_ENDPOINT=https://s3.amazonaws.com

################################################################################
# Email Notifications
################################################################################

# SMTP configuration for email notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# Notification recipients
NOTIFY_EMAIL="admin@promptforge.io ops@promptforge.io"
NOTIFY_CRITICAL_EMAIL=admin@promptforge.io

################################################################################
# Slack Notifications (Optional)
################################################################################

# Slack webhook URL for backup notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

################################################################################
# PagerDuty (Optional)
################################################################################

# PagerDuty integration for critical alerts
PAGERDUTY_SERVICE_KEY=your_pagerduty_key

################################################################################
# Backup Configuration Overrides
################################################################################

# Override default backup directory
# BACKUP_DIR=/var/backups/promptforge

# Override retention policy
# RETENTION_FULL=30
# RETENTION_DB=30

# Enable/disable encryption
# ENCRYPT_BACKUPS=true

# Enable/disable off-site backup
# OFFSITE_BACKUP=true
